# Define lattice and create atoms
variable        nz equal 2
#variable        a0 equal 5.432
variable        a0 equal 5.432005203971
variable        d0 equal ${a0}*sqrt(3)/4
variable        a1 equal 2*sqrt(2)
variable        a2 equal 2*sqrt(2)*sqrt(3)/3
variable        one3 equal 1.0/3
variable        two3 equal 2.0/3
variable        one6 equal 1.0/6
variable        five6 equal 5.0/6
variable        one12 equal 1./12
variable        five12 equal 5.0/12
lattice         custom ${d0}  &
                a1 ${a1} 0 0  &
                a2 0 ${a2} 0  &
                a3 0 0 4  &
                basis 0 0 ${one12}  &
                basis ${one3} 0 ${one6}  &
                basis 0.5 0.5 ${one12}  &
                basis ${five6} 0.5 ${one6}  &
                basis ${one3} 0 ${five12}  &
                basis ${two3} 0 0.5  &
                basis ${five6} 0.5 ${five12}  &
                basis ${one6} 0.5 0.5  &
                basis ${two3} 0 0.75  &
                basis 0 0 ${five6}  &
                basis ${one6} 0.5 0.75  &
                basis 0.5 0.5 ${five6}
region          box block 0 4 0 4 -27 17
create_box      1 box
region          atoms block INF INF INF INF ${bottom} ${nz}
create_atoms    1 region atoms
mass            1 1.0

# This are the two bottommost layers of atoms
#variable        bottomtop equal ${bottom}+0.6
#region          bottom block INF INF INF INF ${bottom} ${bottomtop}
#group           bottom region bottom

# This is the probe atom
# --- First row atom ---
region          probe1 block 2.0 2.9 2.0 2.2 -0.05 0.15
# --- Second row atom ---
region          probe2 block 2.3 2.9 2.0 2.2 0.15 0.35
# --- Third row atom ---
region          probe3 block 2.3 2.4 2.0 2.2 0.35 0.55
# --- Fourth row atom ---
region          probe4 block 2.0 2.9 2.0 2.2 0.55 0.75
group           probeA region probe1
group           probeB region probe3
group           probe1 union probeA probeB
