processors 1 1 1

boundary p p m
units lj
atom_style gfmd
atom_modify sort 0 1.0


#
# Create GFMD lattice
#

lattice sc 1.0
region cell block  0 2  0 2  0 1
create_box 1 cell
mass 1 1.0
create_atoms 1 box

displace_atoms all move 0.5 0.5 0.5 units box
#velocity all set 0.1 0.1 0.1


#
# GFMD substrate
#

include gfmd.in

#
# Random displacements
#

#displace_atoms all move -0.1 -0.1 0.0 units box
#displace_atoms all move -0.5 -0.5 -0.5 units box
displace_atoms all random 0.1 0.1 0.1 12472634
#displace_atoms all move 0.5 0.5 0.5 units box
#displace_atoms all move 0.1 units box


#
# Output
#

compute com all com
thermo 10
thermo_style custom step ke pe etotal f_gfmd[1] f_gfmd[2] f_gfmd[3] c_com[1] c_com[2] c_com[3]
thermo_modify format float "%15.10f" norm no

dump xyz all xyz 1000 traj.xyz


#
# Molecular dynamics
#
fix nve all nve
timestep 0.01
run 10000
#timestep 0.001
#run 100000

write_restart restart
