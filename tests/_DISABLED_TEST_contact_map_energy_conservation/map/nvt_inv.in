boundary      p p m
units         lj
atom_modify   sort 0 1.0

lattice       sc 1.0
region        cell block  0 10  0 10  0 1
create_box    1 cell
mass          1 1.0
create_atoms  1 box

displace_atoms  all move 0.0 0.0 4.0 units box


#
# No interaction
#
pair_style    none


#
# Rigid surface
#
fix           rigid all contact/map input64.matrix 6.0 -1 lj93 0.351364184463153 1.16499305075071 -1.0 # k = 10, r0 = 1
fix_modify    rigid energy yes


#
# Screen output
#
thermo        100
thermo_style  custom step temp ke pe etotal
thermo_modify format float "%14.8f" norm no


#
# Langevin
#
fix           nve all nve
fix           langevin all langevin 1.0 1.0 0.01 234342


#
# Run simulation
#
run           10000

write_restart restart
